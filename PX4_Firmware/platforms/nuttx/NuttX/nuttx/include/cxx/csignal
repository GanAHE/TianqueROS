#ifndef __INCLUDE_CXX_CSIGNAL
#define __INCLUDE_CXX_CSIGNAL

//***************************************************************************
// Included Files
//***************************************************************************

#include <signal.h>

//***************************************************************************
// Namespace
//***************************************************************************

namespace std
{
  using ::sigset_t;
  using ::sig_atomic_t;
  using ::sigval;
  using ::sigevent;
  using ::siginfo;
  using ::siginfo_t;
  using ::sigaction;
  using ::kill;
  using ::raise;
  using ::sigaction;
  using ::sigaddset;
  using ::sigdelset;
  using ::sigemptyset;
  using ::sigfillset;
  using ::sighold;
  using ::sigismember;
  using ::sigignore;
  using ::signal;
  using ::sigpause;
  using ::sigpending;
  using ::sigprocmask;
  using ::sigqueue;
  using ::sigrelse;
  using ::sigset;
  using ::sigtimedwait;
  using ::sigsuspend;
  using ::sigwaitinfo;
}

#endif // CSIGNAL_HEADER
